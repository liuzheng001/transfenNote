.user-info {
    width: 100%;
    box-sizing: border-box;
    height: 57px;
    background: #F0F0F0;
    border-radius: 4px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.user-info > image {
    width: 28px;
    height: 28px;
    margin: 0 12px 0 18px;
    background: #FFD5D5;
    border-radius: 4px;
}

.user-info > .user-name {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #333333;
}
